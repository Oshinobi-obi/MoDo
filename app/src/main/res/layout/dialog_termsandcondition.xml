                    android:id="@+id/tv24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MODO follows strict ethical practices and does not use your data for any unauthorized or unethical purposes. Transparency and respect for your privacy are core values."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv23" />

                <TextView
                    android:id="@+id/tv23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="5. Ethical Commitment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv22" />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We use secure servers and modern encryption to protect your data. Your privacy and safety are priorities in every part of the appâ€™s design."
