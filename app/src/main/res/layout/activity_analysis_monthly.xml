<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bottom Navigation View -->

        <Button
            android:id="@+id/btnOverall1"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="#DBDAE1"
            android:fontFamily="@font/poppins"
            android:padding="9dp"
            android:text="OVERALL"
            android:textColor="#313037"
            android:textColorLink="#E6D9D9"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMonthly1"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#313037"
            android:fontFamily="@font/poppins"
            android:padding="9dp"
            android:text="MONTHLY"
            android:textColor="#FFFFFF"
            android:textColorLink="#E6D9D9"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btnOverall1"
            app:layout_constraintStart_toEndOf="@+id/btnWeekly1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnWeekly1"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:backgroundTint="#DBDAE1"
            android:fontFamily="@font/poppins"
            android:padding="9dp"
            android:text="WEEKLY"
            android:textColor="#313037"
            android:textColorLink="#E6D9D9"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvKeyStats1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Key Statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWeekly1" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtnHome1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="@string/Home1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/homeinactive" />

                <ImageButton
                    android:id="@+id/ibtnCalendar1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="@string/Calendar1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/calendaractive" />

                <View
                    android:layout_width="91dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/ibtnAnalytics1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="@string/Analytics1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/analyticsinactive" />

                <ImageButton
                    android:id="@+id/ibtnProfile1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:contentDescription="@string/Profile1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/profileinactive" />
            </LinearLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddTask1"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:clickable="true"
            android:contentDescription="@string/AddTask1"
            android:translationY="-20dp"
            app:backgroundTint="#313037"
            app:fabCustomSize="101dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:maxImageSize="40dp"
            app:shapeAppearance="@style/CircularShape"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>