<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnEditTask"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins"
            android:text="Edit Task"
            android:textSize="14sp"
            android:background="@drawable/edittask_top"/>

        <Button
            android:id="@+id/btnEditLabel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins"
            android:text="Edit Label"
            android:textSize="14sp"
            android:background="@drawable/edittask_middle"/>

        <Button
            android:id="@+id/btnRemoveTask"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins"
            android:text="Remove Task"
            android:textSize="14sp"
            android:background="@drawable/edittask_bottom"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>