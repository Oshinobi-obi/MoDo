<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAddTask1"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:background="@drawable/modal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCTLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/poppins"
            android:text="@string/Label"
            android:textColor="#3b3b3b"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCTDeadlineDuration" />

        <Spinner
            android:id="@+id/spnrLabelName1"
            android:layout_width="177dp"
            android:layout_height="48dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintStart_toEndOf="@+id/tvCTLabel"
            app:layout_constraintTop_toBottomOf="@+id/spnrPriorityLevel1" />

        <Spinner
            android:id="@+id/spnrPriorityLevel1"
            android:layout_width="177dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_border"
            app:layout_constraintStart_toEndOf="@+id/tvCTDeadlineDuration"
            app:layout_constraintTop_toBottomOf="@+id/etmlTaskDescription1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/clock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTaskTitle1" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="35dp"
            android:backgroundTint="#313037"
            android:fontFamily="@font/poppins"
            android:text="@string/Save"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnrLabelName1" />

        <EditText
            android:id="@+id/etTaskTitle1"
            android:layout_width="361dp"
            android:layout_height="48dp"
            android:layout_marginTop="55dp"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:hint="@string/AddTitle"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#3b3b3b"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTaskSettings1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.001"
            android:padding="0dp"
            android:text="@string/periods"
            android:textColor="#313037"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCTDeadlineDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:text="@string/PriorityLevel"
            android:textColor="#3b3b3b"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etmlTaskDescription1" />

        <EditText
            android:id="@+id/etmlTaskDescription1"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/calendars"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:gravity="start|top"
            android:hint="@string/AddDescription"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#3b3b3b"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDateTime" />

        <Button
            android:id="@+id/btnDateTime"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#DAD9E0"
            android:fontFamily="@font/poppins"
            android:text="03/10/2025 - 11:00am"
            android:textColor="#313037"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/etTaskTitle1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>