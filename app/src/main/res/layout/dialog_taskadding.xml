<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAddTask1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/modal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins"
            android:text="Label"
            android:textColor="#3b3b3b"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername6" />

        <Spinner
            android:id="@+id/spnrPriorityLevel1"
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_border"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:popupBackground="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/tvUsername6"
            app:layout_constraintTop_toBottomOf="@+id/etmlTaskDescription1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/clock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTaskTitle1" />

        <Button
            android:id="@+id/btnDone1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#313037"
            android:fontFamily="@font/poppins"
            android:text="save"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnrLabelName1" />

        <EditText
            android:id="@+id/etTaskTitle1"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:layout_marginTop="55dp"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:hint="Add Title"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTaskSettings1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.001"
            android:padding="0dp"
            android:text=". . ."
            android:textColor="#313037"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsername6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:text="Priority Level"
            android:textColor="#3b3b3b"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etmlTaskDescription1" />

        <EditText
            android:id="@+id/etmlTaskDescription1"
            android:layout_width="286dp"
            android:layout_height="90dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/calendars"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:gravity="start|top"
            android:hint="Add description"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDateTime" />

        <Button
            android:id="@+id/btnDateTime"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#DAD9E0"
            android:fontFamily="@font/poppins"
            android:text="Select Deadline"
            android:textColor="#313037"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/etTaskTitle1" />

        <Spinner
            android:id="@+id/spnrLabelName1"
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_border"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:popupBackground="#ffffff"
            app:layout_constraintStart_toEndOf="@+id/tvLabel1"
            app:layout_constraintTop_toBottomOf="@+id/spnrPriorityLevel1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>