<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">#C5C4CD</item>
        <item name="strokeWidth">5dp</item>
    </style>
    <style name="NoScrollBarCalendarView" parent="android:Widget.Material.CalendarView">
        <item name="android:scrollbars">none</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">#313037</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="SpinnerPopupLimitedHeight" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownHeight">120dp</item>
    </style>
</resources>
